<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.guro.mapper.BoardMapper">
	<insert id="boardReg" parameterType="com.guro.model.BoardVO">
		INSERT INTO BOARD
		(Seq
		,SUBJECT
		,CONTENT
		,REG_DATE
		,COMPANY
		,REG_NAME
		,REG_PWD
		,REG_FILE
		,READ_COUNT
		)
		values(
		tmp_seq.NEXTVAL
		,#{subject}
		,#{content}
		,#{reg_date}
		,#{company}
		,#{reg_name}
		,#{reg_pwd}
			<if test="file_name != null and !file_name.equals('')">
		,#{file_name}
		</if>
			<if test="file_name == null and file_name.equals('')">
		,''
		</if>
		,0
		)
	</insert>

	<select id="boardList" resultType="com.guro.model.BoardVO">
		SELECT
		*
		FROM
		BOARD
		ORDER BY
		SEQ DESC
	</select>

	<select id="boardSearchList"
		parameterType="com.guro.model.BoardVO"
		resultType="com.guro.model.BoardVO">
		SELECT
		*
		FROM
		BOARD
		WHERE
		1=1
		<if test="company != null and !company.equals('')">
			AND COMPANY = #{company}
		</if>
		<if test="reg_name != null and !reg_name.equals('')">
			AND reg_name LIKE '%'||#{reg_name}||'%'
		</if>
		<if test="start_date != null and !start_date.equals('')">
			AND REG_DATE <![CDATA[>=]]>
			#{start_date}
		</if>
		<if test="end_date != null and !end_date.equals('')">
			AND REG_DATE <![CDATA[<=]]>
			#{end_date}
		</if>
		ORDER BY SEQ DESC


	</select>
	<select id="boardOneSearch" parameterType="Integer"
		resultType="com.guro.model.BoardVO">
		SELECT
		*
		FROM
		BOARD
		WHERE
		SEQ = #{seq}
	</select>
	<select id="boardPwdCheck" parameterType="Integer"
		resultType="String">
		SELECT
		reg_pwd
		FROM
		BOARD
		WHERE
		seq = #{seq}
	</select>
	<update id="boardUpdate"
		parameterType="com.guro.model.BoardVO">
		UPDATE
		BOARD
		SET
		subject = #{subject}
		,content =
		#{content}
				<if test="file_name != null and !file_name.equals('')">
				,reg_file = #{file_name}
				</if>
		WHERE
		seq = #{seq}
	</update>
	<delete id="boardDelete" parameterType="Integer">
		DELETE FROM BOARD 
		WHERE SEQ = #{seq}
	</delete>

</mapper>